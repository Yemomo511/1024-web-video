{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "~assets/*": [
        "src/assets/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~pages/*": [
        "src/pages/*"
      ],
      "~/*": [
        "src/*"
      ],
      "~poster/*": [
        "src/assets/poster/*"
      ],
      "~utils/*": [
        "src/utils/*"
      ],
      "~api/*": [
        "src/utils/api/*"
      ],
      "~video/*": [
        "src/utils/video/*"
      ],
      "~page/*": [
        "src/page/*"
      ],
      "~Slider/*": [
        "src/components/Slider/*"
      ],
      "~icon/*": [
        "src/assets/icon/*"
      ],
      "~network/*": [
        "src/utils/network/*"
      ],
      "~Icon/*": [
        "src/components/Icon/*"
      ],
      "~TextWithS/*": [
        "src/components/TextWithS/*"
      ],
      "~TextWithSwitch/*": [
        "src/components/TextWithSwitch/*"
      ],
      "~routes/*": [
        "src/routes/*"
      ],
      "~Home/*": [
        "src/pages/Home/*"
      ],
      "~My/*": [
        "src/pages/My/*"
      ],
      "~Popup/*": [
        "src/components/Popup/*"
      ],
      "~hooks/*": [
        "src/hooks/*"
      ],
      "~common/*": [
        "src/common/*"
      ],
      "~store/*": [
        "src/store/*"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "~Notice/*": [
        "src/components/Notice/*"
      ],
      "~Controller/*": [
        "src/components/Controller/*"
      ],
      "~TextMenu/*": [
        "src/components/Controller/TextMenu/*"
      ],
      "~UserCard/*": [
        "src/components/UserCard/*"
      ],
      "~Toast/*": [
        "src/components/Toast/*"
      ],
      "~Login/*": [
        "src/components/Login/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}